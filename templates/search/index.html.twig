{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}


{% if resultats %}
    <h2>Résultats</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
        {% for result in resultats %}
            <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('media/cvModel.png') }}" class="card-img-top" alt="photo cv">
            <div class="card-body">
                <h5 class="card-title"> Profession du candidat{{ result.id }}</h5>  {#l'id sera enlevé #}
                <p class="card-text">Catégorie : {{ result.categorie }}</p>
                <a href="{{ asset('uploads/curriculumVitae/' ~ result.cvCandidat ) }}" class="btn btn-primary">Voir Cv</a>
            </div>
        </div> 
    </div>
        {% endfor %}
        </div>
{% else %}
    <p>Aucun résultat trouvé.</p>
{% endif %}

{% endblock %}
