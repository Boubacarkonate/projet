        crossorigin="anonymous" referrerpolicy="no-referrer" />                                                                      <!--voir libairie line-awesone = fontawesone-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <script src="https://js.stripe.com/v3/"></script>

        {% block javascripts %}
        {% endblock %}
    </head>
<body>
    

        

  
        <div class="container-fluid px-0">  
            <header>

                <nav>
                    <div id="navbar">
                    
                        <ul>
                            <li>
                                <div class="logo"><a href="{{ path('app_home') }}"><img src="{{ asset('media/logo.png') }}" alt="logo"></a>
                                </div>
                            </li>
                            <li> {% if is_granted('ROLE_ADMIN')==true %}
                            <a href=" {{ path('app_admin_dashboard') }}">admin</a><li>
                            {% endif %} 
                            </li>
                            <li>
                                <div class="barre">
                                    <form method="get" action="">
                                        <input type="search" name="search" id="search" placeholder="mot..." size=""><button><i
                                                class="fa-sharp fa-solid fa-magnifying-glass"></i></button>
                                    </form>
                                </div>
                                <div class="barreMenu">
                                    <form method="get" action="">
                                        <input type="search" name="search" id="search" placeholder="mot..." size=""><button><i
                                                class="fa-sharp fa-solid fa-magnifying-glass"></i></button>
                                    </form>
                                </div>
                            </li>
                            <li>
                                <div class="login">
                                
                                    <ul>
                                        {% if is_granted('ROLE_USER')==false %}
                                        
                                        <li><a href=" {{ path('app_login') }}">connexion</li>
                                        <li><i class="fa-solid fa-user"></i> </a></li>
                                    
                                        {% endif %} 
                                        {% if is_granted('ROLE_USER') %}
                                        <li>
                                            <a href=" {{ path('app_logout') }}">déconnexion</li>
                                        <li><i class="fa-solid fa-user"></i></a></li>
                                        {% endif %} 

                                        <li> {% if is_granted('ROLE_USER')==true %}
                                        <a href=" {{ path('app_profile_index') }}">profil</a>            {# a bien placer en css#}
                                        {% endif %} 
                                        </li>
                                    </ul>
                                    
                                </div>
                            </li>
                            <li> {% if is_granted('ROLE_USER_RECRUTEUR')%}                      {# peut-être à enlever #}
                                <div class="panier"><a href="{{ path('app_cart_show') }}">
                                    <ul>
                                        <li> panier</li>
                                        <li><i class="fa-solid fa-basket-shopping"></i></li>
                                    </ul>
                                    </a>
                                </div>
                                {% endif %}
                            </li>
                        </ul>

                    </div>

                    <div class="dropdown">
                        <a class="btn bg-transparent dropdown-toggle" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <i class="fa-solid fa-bars"></i>
                        </a>

                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                <form method="get" action="">
                                    <input type="search" name="search" id="search" placeholder="mot..." size=""><button><i
                                            class="fa-sharp fa-solid fa-magnifying-glass"></i></button>
                                </form>
                            </li>
                            {# <li><a class="dropdown-item" href="{{ path('app_formule_recruteur_index') }}" 
                                    target="_blank"#}>recruteur</a></li>
                            <li><a class="dropdown-item" href="#"
                                    target="_blank">candidat</a></li>
                            <li><a class="dropdown-item" href="#"
                                    target="_blank">offre d'emploi</a></li>
                        </ul>
                    </div>

                    <div class="menu">
                        <div class="menuLiens">
                            <ul>
                                <li>
                                   
                                    <a href="{{ path('app_espace_recruteur') }}">recruteur</a> 
                                </li>
                                <li>
                                    <a href="#">offre
                                        d'emploi</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_espace_candidat') }}">candidat</a>
                                </li>
                            </ul>
                        </div>

                </nav>


            </header>
        <main>
                <div class="container">
                {% block body %}{% endblock %}
            </div>
            </main>    
                <footer>
                <p><a href="{{ path('app_message') }}" target="_blank">nous contacter</a> </p>
                

                <div id="reseaux">
                    <a href="#"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-square-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                </div>

                <div class="documents">
                    <a href="{{ asset('media/cgv.pdf') }}">CGV</a>
                    <a href="{{ asset('media/mentions_legales.pdf') }}">Mentions légales</a>
                    <a href="{{ asset('media/politique_de_confidentialite.pdf') }}">Politiques de confidentialité</a>
                </div>
                <div class="copyright">&copy; Copyright</p>
                </div>

            </footer>




        </div>



    <script src="{{ asset('js/index.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous"></script>
</body>
</html>
